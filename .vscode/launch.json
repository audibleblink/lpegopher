    "version": "0.2.0",
    "configurations": [
        {
            "name": "Collect PEs",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "collect",
                "pes",
                "--path",
                "c:\\",
                "-v",
                // "c:\\users\\user\\appdata",
                "-o",
                "data/pes.json"
            ],
            "envFile": "${workspaceFolder}/.env",
        },

        {
            "name": "Collect Runners",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "collect",
                "runners",
                "-o",
                "data/runners.json",
            ],
            "envFile": "${workspaceFolder}/.env",
        },

        {
            "name": "Process All",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-v",
                "process",
                "-r",
                "/temp/runners.json",
                "-p",
                "/temp/pes.json",
            ],
            "envFile": "${workspaceFolder}/.env",
        },

        {
            "name": "Process AppData",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "process",
                "-r",
                "data/runners.json",
                "-p",
                "data/pes.json",
            ],
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "DROP and Process AppData",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-v",
                "process",
                "-r",
                "data/runners.json",
                "-p",
                "data/pes.json",
                "--drop",
            ],
            "envFile": "${workspaceFolder}/.env",
        },
    ]
}